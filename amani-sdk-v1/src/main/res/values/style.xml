<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SmallFont">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/rubik_500</item>
    </style>

    <style name="MediumFont">
        <item name="fontFamily">@font/rubik_500</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LargeFont">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your colors here -->
        <item name="colorControlActivated">@color/purple_amani_color</item> <!-- Example color for activated state -->
        <item name="backgroundColor">#FFFFFF</item>
        <item name="colorAccent">@color/purple_amani_color</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyle</item>
    </style>

    <style name="bottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_nfc_dialog</item>
    </style>

</resources>

